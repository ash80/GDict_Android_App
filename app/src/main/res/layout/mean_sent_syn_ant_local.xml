<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical" >

	<!--<RelativeLayout-->
		<!--android:layout_width="match_parent"-->
		<!--android:layout_height="wrap_content">-->

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal" >

		<TextView
			android:id="@+id/local_word"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:layout_marginRight="5dp"
			android:layout_marginEnd="5dp"
			android:textColor="@color/greenishblue"
			android:text="@string/desc"
			android:textSize="18sp" />

		<TextView
			android:id="@+id/local_pronunciation"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:layout_marginStart="5dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:layout_marginEnd="5dp"
			android:textColor="@color/teal"
			android:text="@string/desc"
			android:textSize="16sp" />

		<TextView
			android:id="@+id/local_pos"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:layout_marginStart="5dp"
			android:singleLine="true"
			android:textStyle="italic"
			android:text="@string/desc"
			android:textSize="15sp" />

	</LinearLayout>

	<!--</RelativeLayout>-->
    
    <TextView
        android:id="@+id/local_meaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/desc"
        android:textSize="15sp" />
    
    <TextView
        android:id="@+id/local_sentence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_marginStart="5dp"
		android:layout_marginLeft="5dp"
        android:text="@string/desc"
        android:textColor="@color/teal"
        android:textSize="15sp" />
    
    <TextView
        android:id="@+id/local_synonyms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/desc"
        android:textColor="@color/lightblue"
        android:textSize="15sp" />
    
    <!--<TextView-->
        <!--android:id="@+id/local_antonyms"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/desc"-->
        <!--android:textColor="@color/lightred"-->
        <!--android:textSize="15sp" />-->
    
</LinearLayout>